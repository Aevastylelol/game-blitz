.main-page
    position: absolute
    top: 0
    left: 0
    width: 100vw
    height: 100vh
    display: flex
    flex-direction: column
    justify-content: space-around
    align-items: center
    background-color: $snd-color
    transition: top 300ms

.main-page_off
    top: -100vh

.title-wrapper
    color: $fst-color
    font-size: 18vh
    font-family: 'Encode Sans Expanded'

.menu
    flex-basis: 30%
    display: flex
    flex-direction: column
    justify-content: flex-end
    align-items: center
    font-family: 'Open Sans Condensed'
    font-weight: 300

.menu__item
    color: $fst-color
    margin-top: 3%
    font-size: 6vh

.menu__item:hover
    text-shadow: 5px 5px 0 lighten($fst-color, 75%)

.menu__item_off
    display: none
