.info-panel
    position: absolute
    top: 0
    right: 0
    width: 30vw
    height: 100vh
    display: flex
    flex-direction: column
    transition: right 300ms

.info-panel_off
    right: -30vw

.info-panel__fst-row
    width: 100%
    height: 20%
    color: $snd-color
    font-size: 3vh
    font-family: 'Open Sans Condensed'
    font-weight: 300
    display: flex
    justify-content: space-around
    align-items: center
    transition: transform 200ms

.info-panel__snd-row
    width: 100%
    height: 80%

.info-panel__item_off
    display: none

@keyframes time_is-low
    50%
        transform: scale(0.9)

.info-panel__time_is-low
    color: rgba(192, 57, 43, 1)
    animation: time_is-low 1000ms infinite