.game-over
    position: absolute
    top: 0
    left: 0
    width: 100vw
    height: 100vh
    background-color: $fst-color
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    transition: top 200ms

.game-over_off
    top: 100vh

.game-over__title-wrapper
    color: darken($snd-color, 70%)
    font-size: 1.25vh
    font-family: 'Encode Sans Expanded'

.game-over__score-wrapper
    color: $snd-color
    font-size: 9vh
    line-height: 1
    font-family: 'Open Sans Condensed'